{
  "id": "page.codeberg.alexispurslane.kissg",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],

  "command": "kissg",

  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },

  "finish-args": [
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=xdg-run/gvfs",
    "--filesystem=xdg-run/gvfsd"
  ],

  "modules": [
    {
      "name": "kissg",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/kissg/cargo"
        }
      },
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -D ./target/release/kissg -t /app/bin/",
        "install -Dm644 ./page.codeberg.alexispurslane.kissg.desktop -t /app/share/applications/",
        "install -Dm644 ./page.codeberg.alexispurslane.kissg.metainfo.xml -t /app/share/metainfo/",
        "install -Dm644 ./page.codeberg.alexispurslane.kissg.svg -t /app/share/icons/hicolor/scalable/apps/"
      ],
      
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        "generated-sources.json"
      ]
    }
  ]
}
